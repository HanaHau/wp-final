generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id                   String          @id @default(cuid())
  email                String          @unique
  userID               String?         @unique // User-defined ID
  name                 String?
  image                String?
  emailVerified        DateTime?
  balance              Float           @default(0)
  isInitialized        Boolean         @default(false)
  hasCompletedTutorial Boolean         @default(false)
  createdAt            DateTime        @default(now())
  updatedAt            DateTime        @updatedAt
  accounts         Account[]
  categories       Category[]
  customStickers   CustomSticker[]
  pet              Pet?
  sessions         Session[]
  transactions     Transaction[]
  friendsAsUser    Friend[]        @relation("UserFriends")
  friendsAsFriend  Friend[]         @relation("FriendUsers")
  sentMessages     FriendMessage[]  @relation("SenderMessages")
  receivedMessages FriendMessage[]  @relation("ReceiverMessages")
  actorActivities  FriendActivity[] @relation("ActorActivities")
  targetActivities FriendActivity[] @relation("TargetActivities")
  missionUsers     MissionUser[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Pet {
  id                   String         @id @default(cuid())
  userId               String         @unique
  name                 String         @default("My Pet")
  imageUrl             String?
  facingDirection      String         @default("right")
  points               Int            @default(0)
  fullness             Int            @default(70)
  mood                 Int            @default(70)
  lastLoginDate        DateTime? // Track last login date (to determine if it's the first login of the day)
  lastDailyReset       DateTime? // Track last daily reset time (to determine if reset is needed)
  lastPetPageVisit     DateTime? // Track last pet page visit date (to determine if it's the first visit of the day)
  consecutiveLoginDays Int            @default(0) // Track consecutive login days
  createdAt            DateTime       @default(now())
  updatedAt            DateTime       @updatedAt
  accessories          PetAccessory[]
  purchases            PetPurchase[]
  user                 User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  stickers             RoomSticker[]

  @@map("pets")
}

model Type {
  id           Int           @id @default(autoincrement())
  name         String
  categories   Category[]
  transactions Transaction[]

  @@map("types")
}

model Transaction {
  id         String   @id @default(cuid())
  userId     String
  amount     Float
  categoryId String
  typeId     Int
  date       DateTime @default(now())
  note       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type       Type     @relation(fields: [typeId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])

  @@index([userId, date])
  @@index([categoryId])
  @@index([typeId])
  @@map("transactions")
}

model Category {
  id           String        @id @default(cuid())
  name         String
  typeId       Int
  userId       String?
  isDefault    Boolean       @default(false)
  sortOrder    Int           @default(0)
  icon         String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  user         User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  type         Type          @relation(fields: [typeId], references: [id])
  transactions Transaction[]

  @@unique([userId, typeId, name])
  @@index([typeId])
  @@index([userId])
  @@index([typeId, sortOrder])
  @@map("categories")
}

model PetPurchase {
  id          String   @id @default(cuid())
  petId       String
  itemId      String   @default("unknown")
  itemName    String
  category    String   @default("unknown")
  cost        Int
  quantity    Int      @default(1)
  purchasedAt DateTime @default(now())
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)

  @@index([petId, itemId])
  @@map("pet_purchases")
}

model RoomSticker {
  id         String   @id @default(cuid())
  petId      String
  stickerId  String
  positionX  Float    @default(0.5)
  positionY  Float    @default(0.5)
  rotation   Float    @default(0)
  scale      Float    @default(1)
  layer      String   @default("floor")
  unlockedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  pet        Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)

  @@map("room_stickers")
}

model CustomSticker {
  id        String   @id @default(cuid())
  userId    String
  name      String
  imageUrl  String
  category  String
  price     Int      @default(100) // Future purchase price for this sticker (50, 100, 150)
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isPublic, category])
  @@map("custom_stickers")
}

model PetAccessory {
  id          String   @id @default(cuid())
  petId       String
  accessoryId String
  positionX   Float    @default(0.5)
  positionY   Float    @default(0.5)
  rotation    Float    @default(0)
  scale       Float    @default(1)
  createdAt   DateTime @default(now())
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)

  @@map("pet_accessories")
}

model Friend {
  id        String   @id @default(cuid())
  userId    String // User who sent the friend request
  friendId  String // User who was added as a friend
  status    String   @default("PENDING") // PENDING, accepted, blocked
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation("UserFriends", fields: [userId], references: [id], onDelete: Cascade)
  friend    User     @relation("FriendUsers", fields: [friendId], references: [id], onDelete: Cascade)

  @@unique([userId, friendId])
  @@index([userId])
  @@index([friendId])
  @@map("friends")
}

model FriendMessage {
  id         String   @id @default(cuid())
  senderId   String // User who sent the message
  receiverId String // User who received the message (pet owner)
  petId      String // Related pet ID
  message    String? // Message content (optional)
  action     String // pet, feed, message
  createdAt  DateTime @default(now())
  sender     User     @relation("SenderMessages", fields: [senderId], references: [id], onDelete: Cascade)
  receiver   User     @relation("ReceiverMessages", fields: [receiverId], references: [id], onDelete: Cascade)

  @@index([receiverId, petId])
  @@index([senderId])
  @@map("friend_messages")
}

model FriendActivity {
  id         String   @id @default(cuid())
  actorId    String   // User ID who performed the action
  targetId   String   // User ID who was affected (pet owner)
  petId      String   // Related pet ID
  petName    String   // Pet name (redundant, for display convenience)
  actionType String   // "pet", "feed", "visit"
  details    String?  // Additional details, such as food name fed
  isRead     Boolean  @default(false) // Whether read
  createdAt  DateTime @default(now())
  actor      User     @relation("ActorActivities", fields: [actorId], references: [id], onDelete: Cascade)
  target     User     @relation("TargetActivities", fields: [targetId], references: [id], onDelete: Cascade)

  @@index([targetId, isRead, createdAt])
  @@index([actorId])
  @@map("friend_activities")
}

model Mission {
  id           String        @id @default(cuid())
  code         String        @unique // e.g., "record_transaction"
  title        String
  description  String
  type         String // "daily" | "weekly" | "event"
  target       Int // target progress
  reward       Int
  active       Boolean       @default(true)
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  userMissions MissionUser[]

  @@map("missions")
}

model MissionUser {
  id          String    @id @default(cuid())
  userId      String
  missionId   String
  periodStart DateTime // daily: YYYY-MM-DD 00:00 , weekly: Monday 00:00
  progress    Int       @default(0)
  completed   Boolean   @default(false)
  claimed     Boolean   @default(false)
  completedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  user        User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  mission     Mission   @relation(fields: [missionId], references: [id], onDelete: Cascade)

  @@unique([userId, missionId, periodStart])
  @@map("mission_user")
}
