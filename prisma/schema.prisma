generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id             String          @id @default(cuid())
  email          String          @unique
  userID         String?         @unique // 使用者自訂 ID
  name           String?
  image          String?
  emailVerified  DateTime?
  balance        Float           @default(0)
  isInitialized  Boolean         @default(false)
  createdAt      DateTime        @default(now())
  updatedAt      DateTime        @updatedAt
  accounts       Account[]
  categories     Category[]
  customStickers CustomSticker[]
  pet            Pet?
  sessions       Session[]
  transactions   Transaction[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  user              User    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model Pet {
  id              String         @id @default(cuid())
  userId          String         @unique
  name            String         @default("我的寵物")
  imageUrl        String?
  facingDirection String         @default("right")
  points          Int            @default(0)
  fullness        Int            @default(70)
  mood            Int            @default(70)
  lastLoginDate   DateTime?      // 追蹤最後登入日期（用於判斷是否為當天第一次登入）
  lastDailyReset  DateTime?      // 追蹤最後一次每日重置的時間（用於判斷是否需要重置）
  createdAt       DateTime       @default(now())
  updatedAt       DateTime       @updatedAt
  accessories     PetAccessory[]
  purchases       PetPurchase[]
  user            User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  stickers        RoomSticker[]

  @@map("pets")
}

model Type {
  id           Int           @id @default(autoincrement())
  name         String
  categories   Category[]
  transactions Transaction[]

  @@map("types")
}

model Transaction {
  id         String   @id @default(cuid())
  userId     String
  amount     Float
  categoryId String
  typeId     Int
  date       DateTime @default(now())
  note       String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type       Type     @relation(fields: [typeId], references: [id])
  category   Category @relation(fields: [categoryId], references: [id])

  @@index([userId, date])
  @@index([categoryId])
  @@index([typeId])
  @@map("transactions")
}

model Category {
  id           String        @id @default(cuid())
  name         String
  typeId       Int
  userId       String?
  isDefault    Boolean       @default(false)
  sortOrder    Int           @default(0)
  color        String?
  icon         String?
  createdAt    DateTime      @default(now())
  updatedAt    DateTime      @updatedAt
  user         User?         @relation(fields: [userId], references: [id], onDelete: Cascade)
  type         Type          @relation(fields: [typeId], references: [id])
  transactions Transaction[]

  @@unique([userId, typeId, name])
  @@index([typeId])
  @@index([userId])
  @@index([typeId, sortOrder])
  @@map("categories")
}

model PetPurchase {
  id          String   @id @default(cuid())
  petId       String
  itemId      String   @default("unknown")
  itemName    String
  category    String   @default("unknown")
  cost        Int
  quantity    Int      @default(1)
  purchasedAt DateTime @default(now())
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)

  @@index([petId, itemId])
  @@map("pet_purchases")
}

model RoomSticker {
  id         String   @id @default(cuid())
  petId      String
  stickerId  String
  positionX  Float    @default(0.5)
  positionY  Float    @default(0.5)
  rotation   Float    @default(0)
  scale      Float    @default(1)
  layer      String   @default("floor")
  unlockedAt DateTime @default(now())
  createdAt  DateTime @default(now())
  pet        Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)

  @@map("room_stickers")
}

model CustomSticker {
  id        String   @id @default(cuid())
  userId    String
  name      String
  imageUrl  String
  category  String
  price     Int      @default(100) // 未來購買該貼紙的價格（50, 100, 150）
  isPublic  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isPublic, category])
  @@map("custom_stickers")
}

model PetAccessory {
  id          String   @id @default(cuid())
  petId       String
  accessoryId String
  positionX   Float    @default(0.5)
  positionY   Float    @default(0.5)
  rotation    Float    @default(0)
  scale       Float    @default(1)
  createdAt   DateTime @default(now())
  pet         Pet      @relation(fields: [petId], references: [id], onDelete: Cascade)

  @@map("pet_accessories")
}
